@model MiniOglasnikZaBesplatneStvariMvc.Models.ItemViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Item details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <h4 class="text-muted">@Model.ItemTypeName</h4>
            <div class="mt-3 mb-3">
                <img alt="Item image" class="img-fluid rounded">
            </div>
            <p class="mt-3"><strong>Description:</strong> @Model.Description</p>
        </div>

        <div class="col-md-6">
            <div class="border rounded p-4 bg-light">
                <h4>Additional Information</h4>
                <dl class="row">
                    <dt class="col-sm-5">Tags</dt>
                    <dd class="col-sm-7">
                        @if (Model.TagIds != null && Model.TagIds.Any())
                        {
                            <div>
                                @foreach (var tagId in Model.TagIds)
                                {
                                    var tag = Model.Tags.FirstOrDefault(x => x.Idtag == tagId);
                                    if (tag != null)
                                    {
                                        <span class="tag-item">@tag.Name</span>
                                    }
                                }
                            </div>
                        }
                        else
                        {
                            <p>No tags available.</p>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <a asp-controller="Reservation" asp-action="Create"
               asp-route-ItemId="@Model.Iditem" class="btn btn-primary">
                Reserve
            </a>
            <a asp-controller="Item" asp-action="Search" class="btn btn-outline-primary">Back</a>
        </div>
    </div>
</div>
